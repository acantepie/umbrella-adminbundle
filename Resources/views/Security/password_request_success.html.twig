{% extends '@UmbrellaAdmin/layout.html.twig' %}

{% block body %}
    <body>
    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card">

                        <div class="card-header pt-3 pb-3 text-center bg-primary">
                            {% include '@UmbrellaAdmin/_logo.html.twig' %}
                        </div>

                        <div class="card-body p-4">

                            <div class="text-center m-auto">
                                <img src="{{ asset('build/images/mail_sent.svg') }}" alt="mail sent image" height="64">
                                <h4 class="text-dark-50 text-center mt-4 font-weight-bold">{{ 'message.check_your_email' | trans }}</h4>
                                <p class="text-muted mb-4">
                                    {{ 'message.request_password_success' | trans({'%email%' : email}) | raw }}
                                </p>

                                <a href="{{ path('umbrella_admin_login') }}" class="btn btn-primary">
                                    <i class="mdi mdi-home mr-1"></i> {{ 'action.back_login' | trans }}
                                </a>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>
{% endblock %}