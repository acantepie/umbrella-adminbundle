{% extends '@UmbrellaAdmin/layout.html.twig' %}

{% block body %}
    <body>
        <div class="account-pages mt-5 mb-5">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card">

                            <div class="card-header pt-3 pb-3 text-center bg-primary">
                                {% include '@UmbrellaAdmin/_logo.html.twig' %}
                            </div>

                            <div class="card-body p-4">

                                <div class="text-center w-100 m-auto">
                                    <p class="text-muted mb-4">{{ 'message.reset_password' | trans }}</p>
                                </div>

                                <form method="post">
                                    {{ form_errors(form.plainPassword.first) }}

                                    <div class="form-group">
                                        <label for="{{ form.plainPassword.first.vars.id }}">{{ 'form.label.password' | trans }}</label>
                                        {{ form_widget(form.plainPassword.first) }}
                                    </div>

                                    <div class="form-group">
                                        <label for="{{ form.plainPassword.second.vars.id }}">{{ 'form.label.password_confirm' | trans }}</label>
                                        {{ form_widget(form.plainPassword.second) }}
                                    </div>

                                    {{ form_rest(form) }}


                                    <div class="form-group mb-0 text-center">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="mdi mdi-send mr-1"></i> {{ 'action.send' | trans }}
                                        </button>
                                    </div>

                                </form>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-12 text-center">
                                <a href="{{ path('umbrella_admin_login') }}" class="text-muted ml-1">
                                    {{ 'action.back_login' | trans }}
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
{% endblock %}