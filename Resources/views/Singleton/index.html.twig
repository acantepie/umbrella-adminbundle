{% extends "UmbrellaAdminBundle:Layout:layout.html.twig" %}

{% block content %}

    <form class="form-horizontal padding"
          enctype="multipart/form-data"
          method="POST"
          data-mount="Form"
          action="{{ action }}">

        <div class="card">
            <div class="card-body">
                {{ form_errors(form) }}
                {{ form_rest(form) }}
            </div>
            <div class="card-footer text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-check"></i> {{ 'action.save' | trans }}
                </button>
            </div>
        </div>

    </form>


{% endblock %}